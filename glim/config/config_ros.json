{
  "glim_ros": {

    "enable_local_mapping": true,
    "enable_global_mapping": true,

    "keep_raw_points": false,

    "imu_time_offset": 0.0,
    "points_time_offset": 0.0,
    "acc_scale": 9.80665,

    "imu_frame_id": "livox_frame",
    "lidar_frame_id": "lidar",
    "base_frame_id": "",
    "odom_frame_id": "odom",
    "map_frame_id": "map",
    "publish_imu2lidar": true,
    "tf_time_offset": 1e-6,

    "extension_modules": [
      "libmemory_monitor.so"
    ],
    "imu_topic": "/livox/imu",
    "points_topic": "/livox/lidar",
    "image_topic": "/image",
    "imu_qos": {
      "profile": "sensor_data",
      "depth": 1000,
      "reliability_policy": "best_effort"
    },
    "points_qos": {
      "profile": "sensor_data",
      "depth": 1000,
      "reliability_policy": "best_effort"
    },
    "image_qos": {
      "profile": "sensor_data",
      "depth": 10,
      "reliability_policy": "best_effort"
    }

  }
}